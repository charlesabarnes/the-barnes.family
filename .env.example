# Cloudflare Configuration
# Copy this file to .env and fill in your actual values

# Your Cloudflare Account ID
# Find at: Dashboard → Images → Account ID
CLOUDFLARE_ACCOUNT_ID="your-account-id-here"

# Your Cloudflare API Token
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Needs permission: Account → Cloudflare Images → Edit
CLOUDFLARE_API_TOKEN="your-api-token-here"

# Your Cloudflare Images delivery hash (for URLs)
# Find at: Dashboard → Images → Delivery URL
# Format: https://imagedelivery.net/{HASH}/image-id/variant
CLOUDFLARE_IMAGES_HASH="your-delivery-hash-here"

# R2 Configuration
# R2 Access Key ID (get from Cloudflare R2 dashboard)
# Go to R2 > Manage R2 API Tokens > Create API Token
R2_ACCESS_KEY_ID="your-r2-access-key-id"

# R2 Secret Access Key (get from Cloudflare R2 dashboard)
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"

# R2 Bucket name
R2_BUCKET="barnes-family-images"

# R2 Public URL (your custom domain or R2 dev URL)
# This can be your custom domain pointed to R2 or the R2.dev URL
R2_PUBLIC_URL="https://images.the-barnes.family"