source "https://rubygems.org"

gem "jekyll", "~> 4.3"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"
gem "jekyll-feed"
gem "webrick"

group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-archives"
end

# GitHub Pages dependencies
gem "github-pages", group: :jekyll_plugins if ENV["GITHUB_PAGES"]